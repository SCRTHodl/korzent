{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["../services/action-gateway/node_modules/@types"],
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "cli/**/*.ts"],
  "exclude": ["node_modules"]
}
